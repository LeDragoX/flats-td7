<header>
    <h1>Flats</h1>
    <h3>Boas vindas ao sistema de locação de apartamentos</h3>

    <div>
        <nav>
            <%= link_to 'Cadastrar Imóvel', new_property_path %><br>
            <%= link_to 'Cadastrar Tipo de Imóvel', new_property_type_path %>
            <hr>
        </nav>
    </div>
</header>
<main>
    <aside>
        <h2>Filtrar Por Tipo:</h2>
        <nav>
            <% @property_types.each do |pt| %>
                <%= link_to pt.name, property_type_path(pt.id) %>
            <% end %>
        </nav>
    </aside>
    <section>
        <h1>Imóveis Disponíveis</h1>
        <% if @properties.empty? %>
            <div><span>Nenhum imóvel disponível</span></div>
        <% end %>
        <table>
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Descrição</th>
                    <th>Quartos</th>
                    <th colspan="2">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% @properties.each do |p| %>
                    <tr>
                        <td><%= link_to(p.title, property_path(p.id)) %></td>
                        <td><%= p.description %></td>
                        <td>Quartos: <%= p.rooms %></td>
                        <td>Editar</td>
                        <td>Deletar</td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </section>
</main>