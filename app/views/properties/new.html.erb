<h1>Cadastro de Imóvel</h1>

<nav>
    <%= link_to('Voltar', root_path) %>
    <hr>
</nav>

<%= form_with(model: @property) do |f| %>
    <div>
        <%= f.label :title, "Título" %>
        <%= f.text_field :title %>
        <% @property.errors.full_messages_for(:title).each do |message| %>
            <div class="form-error"><%= message %></div>
        <% end %>

    </div>
    <div>
        <%= f.label :description, "Descrição" %>
        <%= f.text_field :description %>
        <% @property.errors.full_messages_for(:description).each do |message| %>
            <div class="form-error"><%= message %></div>
        <% end %>
    </div>
    <div>
        <%= f.label :rooms, "Quartos" %>
        <%= f.number_field :rooms %>
        <% @property.errors.full_messages_for(:rooms).each do |message| %>
            <div class="form-error"><%= message %></div>
        <% end %>
    </div>
    <div>
        <%= f.label :bathrooms, "Banheiros" %>
        <%= f.number_field :bathrooms %>
        <% @property.errors.full_messages_for(:bathrooms).each do |message| %>
            <div class="form-error"><%= message %></div>
        <% end %>
    </div>
    <div>
        <%= f.label :daily_rate, "Diária" %>
        <%= f.text_field :daily_rate %>
        <% @property.errors.full_messages_for(:daily_rate).each do |message| %>
            <div class="form-error"><%= message %></div>
        <% end %>
    </div>
    <div>
        <%= f.check_box :pets %>
        <%= f.label :pets, "Aceita Pets" %>
        <% @property.errors.full_messages_for(:pets).each do |message| %>
            <div class="form-error"><%= message %></div>
        <% end %>
    </div>
    <div>
        <%= f.check_box :parking_slot %>
        <%= f.label :parking_slot, "Vaga de Estacionamento" %>
        <% @property.errors.full_messages_for(:parking_slot).each do |message| %>
            <div class="form-error"><%= message %></div>
        <% end %>
    </div>
    <%= f.submit "Enviar" %>
<% end %>

